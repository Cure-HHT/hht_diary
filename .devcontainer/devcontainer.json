{
  // ============================================================
  // Default Dev Container — DevOps (most common interactive use)
  // ============================================================
  //
  // FIRST-TIME SETUP: Run tools/dev-env/setup.sh before opening.
  // See: .devcontainer/README.md for complete instructions.
  //
  // Other profiles:
  //   .devcontainer/audit/devcontainer.json — read-only audit access
  // ============================================================

  "name": "Clinical Diary - DevOps (Default)",
  "dockerComposeFile": "../tools/dev-env/docker-compose.yml",
  "service": "devops-main",
  "workspaceFolder": "/workspace/src",

  "initializeCommand": "${localWorkspaceFolder}/.devcontainer/check-prerequisites.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        // Terraform
        "hashicorp.terraform",

        // Docker & Kubernetes
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",

        // YAML
        "redhat.vscode-yaml",

        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Git
        "eamodio.gitlens",
        "github.vscode-pull-request-github",

        // GitHub Copilot (if available)
        "github.copilot",

        // General productivity
        "streetsidesoftware.code-spell-checker",
        "gruntfuggly.todo-tree",

        // Markdown
        "yzhang.markdown-all-in-one"
      ],

      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },

        // Terraform settings
        "terraform.languageServer.enable": true,
        "terraform.experimentalFeatures.validateOnSave": true,

        // YAML settings
        "yaml.schemas": {
          "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
        },

        // Editor settings
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",

        // Role identification
        "window.title": "[DEVOPS] ${dirty}${activeEditorShort}${separator}${rootName}"
      }
    },

    "codespaces": {
      "repositories": {
        "cure-hht/*": {
          "permissions": {
            "contents": "write",
            "pull_requests": "write"
          }
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [],

  "postCreateCommand": "git config core.hooksPath .githooks && echo 'Git hooks enabled' && echo 'DevOps environment ready! Tools: terraform, gcloud, doppler, psql' || echo 'Failed to enable git hooks'",

  "remoteUser": "devuser",

  "updateContentCommand": "git pull",

  "containerEnv": {
    "DOPPLER_PROJECT": "clinical-diary-dev",
    "DOPPLER_CONFIG": "dev"
  }
}
