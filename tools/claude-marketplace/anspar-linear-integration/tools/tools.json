{
  "tools": {
    "LinearFetchTickets": {
      "description": "Fetch Linear tickets assigned to you or with specific labels",
      "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/fetch-tickets.js",
      "parameters": {
        "format": {
          "type": "string",
          "enum": ["json", "summary"],
          "default": "summary",
          "description": "Output format"
        },
        "status": {
          "type": "string",
          "enum": ["all", "backlog", "active", "blocked", "done"],
          "default": "all",
          "description": "Filter by status"
        },
        "label": {
          "type": "string",
          "description": "Filter by label (optional)"
        }
      }
    },
    "LinearCreateTicket": {
      "description": "Create a new Linear ticket",
      "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/create-single-ticket.js",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Ticket title"
        },
        "description": {
          "type": "string",
          "required": true,
          "description": "Ticket description (supports markdown)"
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 4,
          "default": 3,
          "description": "Priority (0=none, 1=urgent, 2=high, 3=normal, 4=low)"
        },
        "labels": {
          "type": "string",
          "description": "Comma-separated labels"
        }
      }
    },
    "LinearSearchTickets": {
      "description": "Search Linear tickets by requirement ID or keyword",
      "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/search-tickets.js",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "Search query (requirement ID or keyword)"
        },
        "format": {
          "type": "string",
          "enum": ["json", "summary"],
          "default": "summary"
        }
      }
    },
    "LinearUpdateTicket": {
      "description": "Update an existing Linear ticket",
      "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/update-ticket.js",
      "parameters": {
        "ticketId": {
          "type": "string",
          "required": true,
          "description": "Linear ticket identifier (e.g., CUR-312)"
        },
        "description": {
          "type": "string",
          "description": "New description (optional)"
        },
        "addChecklist": {
          "type": "string",
          "description": "Markdown checklist items to add"
        }
      }
    },
    "LinearTestConfig": {
      "description": "Test Linear plugin configuration and connectivity",
      "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/test-config.js",
      "parameters": {}
    }
  },
  "preApprovals": [
    "node ${CLAUDE_PLUGIN_ROOT}/scripts/*.js:*",
    "bash ${CLAUDE_PLUGIN_ROOT}/scripts/*.sh:*"
  ]
}