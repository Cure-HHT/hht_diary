#!/bin/bash
# Scan for requirement implementations
# Usage: scan-implementations.skill [REQ-ID]

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [ -n "$1" ]; then
  python3 "$SCRIPT_DIR/scripts/scan-implementations.py" "$1"
else
  python3 "$SCRIPT_DIR/scripts/scan-implementations.py"
fi
