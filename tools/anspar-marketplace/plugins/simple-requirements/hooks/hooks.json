{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-commit-requirement-validation"
          }
        ]
      }
    ],
    "PostCommit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/post-commit-change-detection"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "callback",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start"
          }
        ]
      }
    ]
  }
}
