#!/usr/bin/env bash
# List all available labels in the Linear workspace
#
# Usage:
#   list-labels.skill [options]
#
# Options:
#   --filter=PREFIX  Filter labels by prefix (e.g., "ai:")
#   --format=FORMAT  Output format: list (default) or json

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../scripts" && pwd)"

# Check Node.js version (requires 18+ for fetch())
"$SCRIPT_DIR/check-node-version.sh" || exit 1

node "$SCRIPT_DIR/list-labels.js" "$@"
