#!/bin/bash
# Fetch requirements for a ticket (non-interactive)
# Usage: fetch-ticket-reqs.skill TICKET_ID

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [ -z "$1" ]; then
  echo "Error: Ticket ID required"
  echo "Usage: fetch-ticket-reqs.skill TICKET_ID"
  exit 1
fi

"$SCRIPT_DIR/scripts/fetch-ticket-reqs.sh" "$1"
