#!/bin/bash
# =====================================================
# Pre-Commit Hook: Requirement Validation
# =====================================================
#
# This hook is part of the simple-requirements plugin.
# It validates all requirements in spec/ before allowing commits.
#
# Plugin: simple-requirements v2.0.0
# Location: tools/anspar-cc-plugins/plugins/simple-requirements/
# Implementation: elspais CLI (pip install elspais)
#
# To bypass (NOT RECOMMENDED):
#   git commit --no-verify
#
# =====================================================

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîç Running requirement traceability validation...${NC}"
echo ""

# Find the repository root (hooks may run from plugin cache directory)
REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null)
if [ -z "$REPO_ROOT" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Not in a git repository, skipping validation${NC}"
    exit 0
fi

# Check if elspais is available
if ! command -v elspais &> /dev/null; then
    echo -e "${RED}‚ùå ERROR: elspais CLI not found${NC}"
    echo ""
    echo "The simple-requirements plugin requires elspais."
    echo "Install with: pip install elspais"
    exit 1
fi

# Run validation from repo root
cd "$REPO_ROOT"
if elspais validate; then
    echo ""
    echo -e "${GREEN}‚úÖ Requirement validation passed!${NC}"
else
    echo ""
    echo -e "${RED}‚ùå Requirement validation failed!${NC}"
    echo ""
    echo "Fix the errors above before committing."
    echo "See spec/requirements-format.md for format specification."
    echo ""
    echo "To bypass this check (NOT RECOMMENDED):"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi

# Additional validation: Check that spec files only reference REQ#s in INDEX.md
SPEC_FILES_CHANGED=$(git diff --cached --name-only --diff-filter=ACM | grep '^spec/.*\.md$' | grep -v '^spec/INDEX\.md$' || true)

if [ -n "$SPEC_FILES_CHANGED" ]; then
    echo ""
    echo -e "${BLUE}üîç Checking REQ# references against INDEX.md...${NC}"
    echo ""

    # Check if INDEX.md exists
    if [ ! -f "$REPO_ROOT/spec/INDEX.md" ]; then
        echo -e "${RED}‚ùå ERROR: spec/INDEX.md not found${NC}"
        echo ""
        echo "INDEX.md is required to validate REQ# references."
        echo "Please ensure spec/INDEX.md exists before committing spec files."
        exit 1
    fi

    # Read all valid REQ#s from INDEX.md (format: | REQ-p00001 | ...)
    INDEX_REQS=$(grep -oP '^\|\s*(REQ-[pod]\d{5})' "$REPO_ROOT/spec/INDEX.md" | awk '{print $2}' || true)

    if [ -z "$INDEX_REQS" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  WARNING: No REQ#s found in INDEX.md${NC}"
        echo "If this is a new repository, this is expected."
        echo ""
    fi

    # Track missing REQ#s
    MISSING_REQS=()

    # Check each staged spec file for REQ# headers
    for file in $SPEC_FILES_CHANGED; do
        # Extract REQ#s from requirement headers (format: # REQ-p00001: Title or ## REQ-p00001: Title)
        FILE_REQS=$(git diff --cached "$file" | grep -oP '^\+##?\s*(REQ-[pod]\d{5})' | awk '{print $2}' | sort -u || true)

        if [ -n "$FILE_REQS" ]; then
            for req in $FILE_REQS; do
                # Check if this REQ# exists in INDEX.md
                if ! echo "$INDEX_REQS" | grep -q "^$req$"; then
                    MISSING_REQS+=("$req (in $file)")
                fi
            done
        fi
    done

    # Report results
    if [ ${#MISSING_REQS[@]} -gt 0 ]; then
        echo -e "${RED}‚ùå ERROR: Spec files reference REQ#s not found in INDEX.md${NC}"
        echo ""
        echo "The following REQ#s are referenced but not in spec/INDEX.md:"
        for item in "${MISSING_REQS[@]}"; do
            echo "  - $item"
        done
        echo ""
        echo -e "${YELLOW}Required actions:${NC}"
        echo "  1. Claim these REQ#s using GitHub Actions:"
        echo "     ‚Üí Go to Actions ‚Üí Claim Requirement Number"
        echo "     ‚Üí Or run: gh workflow run claim-requirement-number.yml"
        echo ""
        echo "  2. OR if INDEX.md is staged in this commit, this check may be premature."
        echo "     Ensure INDEX.md is committed first or in the same commit."
        echo ""
        echo "  3. To bypass this check (NOT RECOMMENDED):"
        echo "     git commit --no-verify"
        echo ""
        exit 1
    fi

    echo -e "${GREEN}‚úÖ All REQ#s exist in INDEX.md${NC}"
fi

echo ""
echo -e "${GREEN}‚úÖ All validation checks passed!${NC}"
echo ""
exit 0
