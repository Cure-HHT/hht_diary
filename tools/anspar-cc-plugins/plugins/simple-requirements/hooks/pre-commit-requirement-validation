#!/bin/bash
# =====================================================
# Pre-Commit Hook: Requirement Validation
# =====================================================
#
# This hook is part of the simple-requirements plugin.
# It validates all requirements in spec/ before allowing commits.
#
# Plugin: simple-requirements v1.0.0
# Location: tools/anspar-marketplace/plugins/simple-requirements/
# Implementation: tools/requirements/validate_requirements.py (shared tool)
#
# To bypass (NOT RECOMMENDED):
#   git commit --no-verify
#
# =====================================================

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîç Running requirement traceability validation...${NC}"
echo ""

# Check if validation script exists
VALIDATION_SCRIPT="tools/requirements/validate_requirements.py"

if [ ! -f "$VALIDATION_SCRIPT" ]; then
    echo -e "${RED}‚ùå ERROR: Validation script not found: $VALIDATION_SCRIPT${NC}"
    echo ""
    echo "The requirement-validation plugin requires the validation script."
    echo "See tools/requirements/README.md for setup."
    exit 1
fi

# Run validation
if python3 "$VALIDATION_SCRIPT"; then
    echo ""
    echo -e "${GREEN}‚úÖ Requirement validation passed!${NC}"
    echo ""
    exit 0
else
    echo ""
    echo -e "${RED}‚ùå Requirement validation failed!${NC}"
    echo ""
    echo "Fix the errors above before committing."
    echo "See spec/requirements-format.md for format specification."
    echo ""
    echo "To bypass this check (NOT RECOMMENDED):"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi
