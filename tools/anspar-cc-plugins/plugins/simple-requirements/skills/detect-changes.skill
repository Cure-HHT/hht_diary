#!/bin/bash
# Detect requirement changes
# Usage: detect-changes.skill [--format summary|detailed|json]

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

FORMAT="${1:---format}"
FORMAT_VALUE="${2:-summary}"

python3 "$SCRIPT_DIR/scripts/detect-changes.py" "$FORMAT" "$FORMAT_VALUE"
