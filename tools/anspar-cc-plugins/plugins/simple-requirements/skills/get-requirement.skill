#!/bin/bash
# Get requirement details by ID
# Usage: get-requirement.skill REQ-ID

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [ -z "$1" ]; then
  echo "Error: Requirement ID required"
  echo "Usage: get-requirement.skill REQ-d00027"
  exit 1
fi

python3 "$SCRIPT_DIR/scripts/get-requirement.py" "$1"
